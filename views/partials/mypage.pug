.container-fluid(ng-init='getUser(\'' + id + '\')')
    form(name="form")
        .row
            .col-md-4.col-md-offset-2
                img.img-thumbnail(ngf-thumbnail='file' ng-show='file' width='100%')
                img.img-thumbnail(ngf-src='user.imgUrl' ng-hide='file' width='100%')
                .form-group(ng-hide='readOnly')
                    span
                        input.form-control(type='text' name='file' ng-show='file' ng-model='file.name') 
                        input.form-control(type='text' name='imgUrl' ng-hide='file' ng-model='user.imgUrl') 
                        .btn.btn-info(ngf-select ng-model="file" name="file" ngf-pattern="'image/*'" ngf-accept="'image/*'" ngf-max-size="20MB" ngf-min-height="100" ) Browse
            .col-md-4
                .row
                    .col-md-6
                        .form-group
                            label First Name
                            input.form-control(type='text' ng-readonly='readOnly' name='firstname' ng-model='user.firstName') 
                    .col-md-6
                        .form-group
                            label Last Name
                            input.form-control(type='text' ng-readonly='readOnly' name='lastname' ng-model='user.lastName')
                .row 
                    .col-md-12
                        .form-group
                            label Email
                            input.form-control(type='email' ng-readonly='readOnly' name='email' ng-model='user.email')
                        .form-group(ng-hide='readOnly')
                            label Change Password
                            input.form-control(type='password' name='password' ng-model='user.password')
                        .form-group(ng-hide='readOnly')
                            label Confirm Password
                            input.form-control(type='password' name='confirmpassword' ng-model='user.confirmPassword')
        .row
            .col-md-8.col-md-offset-2
                hr
                h3 Fam
                .row
                    .col-md-4
                        p Mother: {{user.mother.firstName}} {{user.mother.lastName}}
                        p Father: {{user.father.firstName}} {{user.father.lastName}}
                        p Spouse: {{user.spouse.firstName}} {{user.spouse.lastName}}
                .row
                    .col-md-4
                        button.btn.btn-info Add Relationship        
        .row
            .col-md-8.col-md-offset-2
                hr
                h3 Contact
                .row
                    .col-md-4
                        .form-group
                            label Primary Phone
                            input.form-control(type='text'  ng-readonly='readOnly' name='father' ng-model='user.primaryPhone')
                        .form-group
                            label Secondary Phone
                            input.form-control(type='text' ng-readonly='readOnly' name='mother' ng-model='user.secondaryPhone')
        .row
            .col-md-8.col-md-offset-2
                button.btn.btn-info(type='button' ng-show='readOnly' ng-click='toggleReadOnly()') Edit
                button.btn.btn-danger(type='button' ng-hide='readOnly' ng-click='saveUser(\''+id+'\')') Save
                
    