extends layout

block content
  .container-fluid
    .row
      .col-md-6.col-md-offset-3
        .panel.panel-default
          form(action='/auth/forgot' method='post')
            .panel-heading
              h1= title
            .panel-body
              .form-group
                label What is your the email associated with you account?
                input.form-control(type='email' name='email')
            .panel-footer
              button.btn.btn-default(type='submit') Recover
